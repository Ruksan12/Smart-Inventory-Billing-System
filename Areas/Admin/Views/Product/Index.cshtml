@model IEnumerable<InventoryBillingSystem.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Product</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.Quantity < 10 ? "table-danger" : "")">
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="@item.Name" width="50" height="50" class="img-thumbnail" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Supplier?.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
