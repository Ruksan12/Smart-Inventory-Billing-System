@model InventoryBillingSystem.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div class="card p-3 mb-3">
    <div class="row">
        <div class="col-md-2">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" width="100" height="100" class="img-thumbnail" />
            }
        </div>
        <div class="col-md-10">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Supplier:</strong> @Model.Supplier?.Name</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
